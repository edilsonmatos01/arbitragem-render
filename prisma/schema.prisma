generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SpreadHistory {
  id           String   @id @default(cuid())
  symbol       String
  exchangeBuy  String
  exchangeSell String
  direction    String
  spread       Float
  timestamp    DateTime @default(now())

  @@index([symbol, exchangeBuy, exchangeSell, direction])
}
